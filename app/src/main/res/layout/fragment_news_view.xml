<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/BackgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:padding="@dimen/dp5"
        android:id="@+id/news_one_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/news_one_img"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher" />
        <!--头条-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="@color/BackgroundColor"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/news_one_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="新闻标题"
                android:textColor="@color/font_three_color"
                android:textSize="@dimen/sp16" />

            <com.qlckh.chunlvv.view.richtextview.XRichText
                android:id="@+id/news_one_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/room_asix_color"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/news_one_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/synews"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="2月2日  18:00"
                android:textColor="@color/room_asix_color"
                android:textSize="@dimen/sp16" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
