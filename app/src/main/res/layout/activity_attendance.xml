<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <com.youth.banner.Banner
        android:id="@+id/braner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp182">
    </com.youth.banner.Banner>

    <LinearLayout
        android:layout_marginTop="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp8"
        android:paddingBottom="@dimen/dp8"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上班"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/text_color_normal"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginStart="@dimen/dp20">

            <TextView
                android:id="@+id/tv_working_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地理位置"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_working_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打卡时间"
                android:layout_marginTop="@dimen/dp5"
                android:textSize="16sp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_working_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签到"
            android:clickable="true"
            android:padding="@dimen/dp8"
            android:background="@drawable/bg_btn_sign"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/white"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp8"
        android:paddingBottom="@dimen/dp8"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下班"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/text_color_normal"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginStart="@dimen/dp20">

            <TextView
                android:id="@+id/tv_offline_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地理位置"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_offline_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打卡时间"
                android:layout_marginTop="@dimen/dp5"
                android:textSize="16sp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_offline_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签到"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:clickable="true"
            android:padding="@dimen/dp8"
            android:background="@drawable/bg_btn_sign"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>