<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
        <!--回收物品信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/goods_img"
                android:layout_width="@dimen/dp85"
                android:layout_height="@dimen/dp85"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/goods_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="@dimen/sp18"
                    android:textColor="@color/font_three_color"/>
                <TextView
                    android:id="@+id/people_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="@dimen/sp16"
                    android:textColor="@color/font_three_color"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <!--满意度-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务满意度"
                android:textColor="@color/font_three_color"
                android:textSize="@dimen/sp18"/>
            <com.qlckh.chunlvv.view.RatingBar
                android:id="@+id/evaluation_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:starCount="5"
                app:starEmpty="@drawable/rating_small_empty"
                app:starFill="@drawable/rating_small_full"
                app:starHalf="@drawable/rating_small_half"
                app:starImageSize="18dp"
                app:starPadding="1dp"
                app:starStep="0"
                app:stepSize="Half"
                android:layout_marginLeft="8dp"/>
            <!--上面RatingBar属性设置的代码是关键 对星星数量，大小，位置，星星样式，间距，默认星级等均做了设置-->
        </LinearLayout>
        <!--评价的内容-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评价语："
                android:textColor="@color/font_three_color"
                android:textSize="@dimen/sp18"/>
            <TextView
                android:id="@+id/evaluation_vontent_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/font_three_color"
                android:textSize="@dimen/sp16"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>