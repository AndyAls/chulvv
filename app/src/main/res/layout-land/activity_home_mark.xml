<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp12">

        <TextView
            android:id="@+id/tvState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:text="注意:如果称重偏差太大,请先把称上面的东西拿掉,点击下面归零按钮后重新称取"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="@dimen/sp20"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvState1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:text="注意:如果称重偏差太大,请先把称上面的东西拿掉,点击下面归零按钮后重新称取"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="@dimen/sp20"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"
            android:paddingLeft="@dimen/dp65"
            android:paddingRight="@dimen/dp65"
            android:text="归零"
            android:textSize="18sp"
            android:background="@drawable/selector_top_ok"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp2"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户姓名:"
                android:textColor="@color/black"
                android:textSize="@dimen/sp18" />


            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp6"
                android:text="用户姓名:用户姓名用户姓名用户姓名"
                android:textColor="#AB333333"
                android:textSize="@dimen/sp16" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp2"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户住址:"
                android:textColor="@color/black"
                android:textSize="@dimen/sp18" />


            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp6"
                android:text="用户姓名:用户姓名用户姓名用户姓名"
                android:textColor="#AB333333"
                android:textSize="@dimen/sp16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp3"
                android:text="评价:"
                android:textColor="@color/dark_green"
                android:textSize="@dimen/sp20"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:layout_marginTop="@dimen/dp5"
                android:layout_weight="1"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:checked="true"
                    android:padding="@dimen/dp5"
                    android:text="好"
                    android:textColor="@color/status_green"
                    android:textSize="@dimen/sp25" />


                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:padding="@dimen/dp5"
                    android:text="中"
                    android:textColor="@color/font_org_color"
                    android:textSize="@dimen/sp25" />


                <RadioButton
                    android:id="@+id/rb3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:padding="@dimen/dp5"
                    android:text="差"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp25" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="得分:  "
                android:textColor="@color/black"
                android:textSize="@dimen/sp20" />


            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/red"
                android:textSize="@dimen/sp20" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:gravity="center_vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="称重:"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/sp20" />

            <EditText
                android:id="@+id/etWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:background="@drawable/bg_editext_default"
                android:enabled="false"
                android:clickable="false"
                android:hint="0"
                android:paddingLeft="@dimen/dp35"
                android:paddingTop="@dimen/dp3"
                android:paddingRight="@dimen/dp35"
                android:paddingBottom="@dimen/dp3"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/sp20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:text="kg"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/sp22" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍照:"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/sp20" />

            <com.qlckh.chunlvv.view.PicGridView
                android:id="@+id/picModify"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp20"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp7">

            </com.qlckh.chunlvv.view.PicGridView>
        </LinearLayout>


        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/dp62"
            android:layout_marginRight="@dimen/dp22"
            android:background="@drawable/bg_btn_sign"
            android:gravity="center"
            android:text="提交评价"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>