<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp35"
        android:paddingRight="@dimen/dp35">


        <ImageView
            android:layout_width="@dimen/dp150"
            android:layout_height="@dimen/dp150"
            android:src="@drawable/app_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:text="杭州淇点智能环保科技有限公司"
            android:textColor="@color/mian_bounced_two_color"
            android:textSize="@dimen/sp28"
            android:textStyle="bold" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:theme="@style/CustomAppTheme_textInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tv_http"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入域名"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:padding="@dimen/dp15"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:theme="@style/CustomAppTheme_textInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入使用人姓名"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:padding="@dimen/dp15"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:theme="@style/CustomAppTheme_textInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入公司名称"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:padding="@dimen/dp15"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:theme="@style/CustomAppTheme_textInputLayout"
            app:counterEnabled="true"
            app:counterMaxLength="11">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLines="1"
                android:padding="@dimen/dp15"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:theme="@style/CustomAppTheme_textInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tv_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入验证码"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:padding="@dimen/dp15"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp32"
            android:layout_marginRight="@dimen/dp32"
            android:layout_marginTop="@dimen/dp20"
            android:padding="@dimen/dp10"
            android:background="@drawable/bg_btn_login"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>